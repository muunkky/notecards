{
  "name": "notecards",
  "version": "0.0.1",
  "description": "Professional notecard application with world-class manual reordering and browser automation services",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:all": "npm run build && firebase deploy",
    "deploy:capture": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-capture.ps1",
    "test": "node scripts/run-tests-log.mjs",
    "test:run": "node scripts/run-tests-log.mjs",
    "test:unit": "node scripts/run-tests-log.mjs",
    "test:unit:watch": "vitest",
    "test:e2e": "node scripts/run-e2e-tests-log.mjs",
    "test:e2e:dev": "E2E_TERMINAL_MODE=full node scripts/run-e2e-tests-log.mjs",
    "test:e2e:vitest": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:e2e:ui": "vitest --ui --config vitest.e2e.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "node scripts/run-tests-log.mjs -- --coverage",
    "test:coverage:log": "node scripts/run-tests-log.mjs -- --coverage",
    "test:watch": "TEST_TERMINAL_MODE=full node scripts/run-tests-log.mjs -- --watch",
    "test:ui": "TEST_TERMINAL_MODE=full vitest --ui",
    "test:log": "node scripts/run-tests-log.mjs",
    "test:wait": "node scripts/wait-for-test-complete.mjs",
    "test:rules": "node scripts/run-rules-tests.mjs",
    "test:rules:standalone": "node scripts/verify-firestore-rules.mjs",
    "test:rules:ci": "node scripts/verify-firestore-rules.mjs",
    "test:rules:vitest": "cross-env FIRESTORE_RULES_VITEST=1 vitest run src/test/rules/sharing-rules.test.ts",
    "test:regression": "node run-regression-tests.mjs",
    "test:regression:headless": "node run-regression-tests.mjs --headless",
    "test:regression:vitest": "vitest run --config vitest.regression.config.ts",
    "test:regression:data": "node run-regression-tests.mjs --suite data-model",
    "test:regression:performance": "node run-regression-tests.mjs --suite performance",
    "test:regression:validation": "node run-regression-tests.mjs --suite validation",
    "test:performance": "node performance-large-collaboration-test.mjs",
    "test:performance:headless": "node performance-large-collaboration-test.mjs --headless",
    "test:performance:size": "node performance-large-collaboration-test.mjs --test addition --size",
    "test:performance:unit": "vitest --config vitest.performance.config.ts",
    "test:performance:analyze": "node scripts/analyze-test-performance.mjs",
    "test:performance:benchmark": "node scripts/test-performance-benchmark.mjs",
    "cleanup:debug": "node debug-cleanup.mjs",
    "test:functions": "node scripts/run-functions-tests.mjs",
    "auth:setup": "node scripts/setup-authentication.mjs",
    "auth:quick": "node -e \"import s from './services/browser-service.mjs'; s.quickAuth().then(r => { console.log(r ? 'OK Done' : 'FAILED'); return s.shutdown(); }).then(() => process.exit(r ? 0 : 1))\"",
    "auth:verify": "node -e \"import s from './services/browser-service.mjs'; s.verifyAuthentication().then(r => { console.log(r ? 'Authenticated' : 'Not authenticated'); process.exit(0); })\"",
    "auth:pro": "node scripts/professional-auth.mjs setup",
    "auth:stealth": "node scripts/auth-stealth.mjs",
    "auth:service-setup": "node scripts/setup-service-account.mjs",
    "auth:service-test": "node scripts/test-service-account.mjs",
    "auth:service-quick": "node -e \"import s from './services/browser-service.mjs'; s.quickServiceAuth().then(r => { console.log(r ? 'Service Account Auth Success' : 'Service Account Auth Failed'); return s.shutdown(); }).then(() => process.exit(r ? 0 : 1))\"",
    "automate": "node run-tests.mjs",
    "test:puppeteer": "node run-tests.mjs",
    "test:browser": "node test/main-test-suite.mjs",
    "demo:browser": "node scripts/browser-service-demo.mjs",
    "demo:simple": "node demo-simple-service.mjs",
    "ui:interactive": "node scripts/interactive-ui.mjs",
    "typecheck:tests": "tsc -p tsconfig.tests.json --noEmit",
    "kill:orphans": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-orphans.ps1",
    "ports:emulators": "powershell -ExecutionPolicy Bypass -File ./scripts/list-emulator-ports.ps1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "commander": "^14.0.0",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.5.0",
    "puppeteer": "^24.18.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.24",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "cross-env": "^7.0.3"
  }
}
